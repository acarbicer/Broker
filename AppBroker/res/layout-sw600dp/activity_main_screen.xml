<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen" >

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="120dp"
		android:background="@drawable/imgbutton"
        android:text="Display My Interested Items"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="120dp"
		android:background="@drawable/imgbutton"
        android:text="Display My Investments on Graphic" 
         android:textColor="#FFF"
         android:textSize="30sp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="120dp"
		android:background="@drawable/imgbutton"
        android:lines="2"
        android:text="Display All Investments" 
         android:textColor="#FFF"
         android:textSize="30sp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/imgbutton"
        android:text="Display My Investments"
         android:textColor="#FFF" 
         android:textSize="30sp"/>

    <ImageView
        android:id="@+id/main_ustbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ustbar" />

</RelativeLayout>